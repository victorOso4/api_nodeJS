<%- include('../layouts/header', {title: 'Motorcycle List'}); -%>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="alert alert-success text-center">Motorcycle list</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Placa</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Displacement</th>
                            <th scope="col">Color</th>
                            <th scope="col">Model</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Update</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% motorcycles.map( motorcycle => { %>
                            <tr>
                                <th scope="row"><%= motorcycle.id %></th>
                                <td><%= motorcycle.placa%></td>
                                <td><%= motorcycle.brand %></td>
                                <td><%= motorcycle.displacement >= 115 ? '🏍️' : '🛵' %></td>
                                <td><%= motorcycle.color %></td>
                                <td><%= motorcycle.model %></td>
                                <td>
                                    <form 
                                    action="/motorcycle/delete/<%= motorcycle.id %>" 
                                    method="post"
                                    onsubmit="return confirm('Are you sure you want to delete this motorcycles?');"
                                    >
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>

                                   
                                </td>
                                <td>
                                    <a href="/motorcycle/edit/<%= motorcycle.id %>" class="btn btn-primary"><i class="bi bi-pencil-square" title="Edit motorcycle"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-grid">
                <a href="/motorcycle/create" class="btn btn-outline-secondary">
                    Create a new motorcycle
                </a>
            </div>
        </div>
    </div>

<%- include('../layouts/footer'); -%>